<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5d2e2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fx"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:id="@+id/mathsbanner"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Formulas"
        android:textSize="30dp"
        android:textColor="#043e17"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:id="@+id/formulas"
        android:background="#f9a0e199"
        android:layout_below="@+id/mathsbanner"/>

</RelativeLayout>