<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fa96">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:src="@drawable/microp"
        android:layout_alignParentTop="true"
        android:id="@+id/mathsbanner"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f5c46e"
        android:text="PROGRAMS"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="serif-monospace"
        android:textColor="#f9354e20"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/assemblyprograms"
        android:layout_below="@+id/theory"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f5c46e"
        android:text="THEORY"
        android:textSize="30dp"
        android:fontFamily="serif-monospace"
        android:textColor="#f9354e20"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/theory"
        android:layout_below="@+id/mathsbanner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>