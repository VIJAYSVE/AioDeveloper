<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bgtapet"
    tools:context="com.vijay.aiodeveloper.LoginActivity">

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/viewImage"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:src="@drawable/avtar"-->
        <!--app:civ_border_width="2dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="40dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--app:civ_border_color="#FF000000"-->
        <!--android:onClick=""/>-->
    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/avator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:onClick=""/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="91px"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/password_login"
        android:hint="Password"
        android:textColorHint="#fff"
        android:textSize="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:layout_below="@+id/email_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/email_login"
        android:layout_alignStart="@+id/email_login" />


    <Button
        android:text="Skip"
        android:textSize="25sp"
        android:textColor="#fcf8f8"
        android:background="@drawable/buttonbg2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="11dp"
        android:id="@+id/skip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:background="@drawable/emailsmall"
        android:layout_width="91px"
        android:layout_height="91px"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/email_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="91px"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_login"
        android:hint="Email"
        android:textColorHint="#fff"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:textSize="30dp"
        android:layout_below="@+id/viewImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/link_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Account ?"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#fff"
        android:gravity="right"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/password_login" />

    <TextView
        android:background="@drawable/locksmall"
        android:layout_width="91px"
        android:layout_height="91px"
        android:id="@+id/textView2"
        android:layout_above="@+id/link_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Login"
        android:textSize="25sp"
        android:textColor="#fffbfb"
        android:background="@drawable/buttonbg1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/login"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/link_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />
</RelativeLayout>