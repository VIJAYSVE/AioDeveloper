<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsignup"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vijay.aiodeveloper.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <EditText
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="User Name"
            android:lines="1"
            android:textColorHint="#fff"
            android:id="@+id/name"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Age"
            android:textColorHint="#fff"
            android:inputType="number"
            android:lines="1"
            android:id="@+id/age"
            android:layout_below="@id/name"
            android:textSize="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email"
            android:textColorHint="#fff"
            android:inputType="textEmailAddress"
            android:id="@+id/email_signup"
            android:layout_below="@id/age"
            android:textSize="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#fff"
            android:id="@+id/password_signup"
            android:layout_below="@id/email_signup"
            android:textSize="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textColorHint="#fff"
            android:id="@+id/confirmpassword_signup"
            android:layout_below="@id/password_signup"
            android:textSize="25dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/bgtapetbluebutton"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="20dp"
            android:id="@+id/register"
            android:layout_below="@+id/mobile"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Mobile"
            android:textColorHint="#fff"
            android:inputType="phone"
            android:id="@+id/mobile"
            android:textSize="25dp"
            android:layout_below="@+id/confirmpassword_signup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</LinearLayout>
